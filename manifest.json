{
    "manifest_version": 3,
    "name": "Boyfriend, please.",
    "description": "Replace mentions of bros with boyfriend. You can view the source code here: https://github.com/myyk/boyfriend-chrome-extension/",
    "version": "2.0.0",
    "icons": {
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": ["activeTab"]
}
